<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectChoiceRadioButton"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/selectChoiceRadioButton"
        android:layout_alignBottom="@id/selectChoiceRadioButton"
        android:layout_toRightOf="@+id/selectChoiceRadioButton"
        android:layout_toEndOf="@+id/selectChoiceRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:id="@+id/choiceStatementFilled"/>




</RelativeLayout>